{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "lib": [
      "ES2018",
      "ESNext.AsyncIterable"
    ],
    "outDir": "dist/",
    "moduleResolution": "node",
    "baseUrl": "./",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}
